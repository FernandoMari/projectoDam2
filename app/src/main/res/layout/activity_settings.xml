<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/default_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:text=" Settings"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="true"
        android:drawableStart="@drawable/ic_settings"
        >
    </TextView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text=" Account"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_accountsettings"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="22dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            >
        </TextView>

        <Button
            android:id="@+id/btProfile"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/custom_right_icon"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="left|center_vertical"
            android:text="Edit profile"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_marginLeft="10dp">

        </Button>

        <View
            android:id="@+id/line"
            android:layout_width="255dp"
            android:layout_height="1dp"
            android:background="@color/medium_blue"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/btPassword"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:text="Change password"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:drawableEnd="@drawable/custom_right_icon"
            android:layout_marginLeft="10dp">

        </Button>

        <View
            android:id="@+id/line3"
            android:layout_width="255dp"
            android:layout_height="1dp"
            android:background="@color/medium_blue"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/btLogout"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:text=" Log out"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:drawableEnd="@drawable/custom_right_icon"
            android:drawableStart="@drawable/ic_logout"
            android:layout_marginLeft="10dp">

        </Button>


        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text=" Manage friends"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_friends"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="22dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            >
        </TextView>

        <Button
            android:id="@+id/btRequests"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/custom_right_icon"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="left|center_vertical"
            android:text="Friend requests"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_marginLeft="10dp">

        </Button>

        <View
            android:id="@+id/line2"
            android:layout_width="255dp"
            android:layout_height="1dp"
            android:background="@color/medium_blue"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/btRemove"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:text="Remove friends"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/montserrat_medium"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:drawableEnd="@drawable/custom_right_icon"
            android:layout_marginLeft="10dp">
        </Button>

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text=" About Decisions"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_info"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="22dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            >
        </TextView>

        <Button
            android:id="@+id/btCreators"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/custom_right_icon"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="left|center_vertical"
            android:text="Creators"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_marginLeft="10dp">
        </Button>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_settings_icon"
            android:contentDescription="btSettings"
            ></Button>

        <Button
            android:id="@+id/btHome"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_home_icon"
            android:contentDescription="buttonHome"
            ></Button>

        <Button
            android:id="@+id/btFriends"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_addfriends_icon"
            android:contentDescription="btFriends"
            ></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>