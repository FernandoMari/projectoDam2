<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/default_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:text=" Settings"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="true"
        android:drawableStart="@drawable/ic_settings"
        >
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=" Friend requests"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_friends"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/black"
            >
        </TextView>



        <!--<Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_search">
        </Button>-->

        <ListView
            android:id="@+id/lvPersons"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@drawable/listview_style"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Search persons"
            android:textSize="20dp"
            tools:ignore="MissingConstraints">

        </ListView>


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_settings_icon"
            android:contentDescription="btSettings"
            ></Button>

        <Button
            android:id="@+id/btHome"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_home_icon"
            android:contentDescription="buttonHome"
            ></Button>

        <Button
            android:id="@+id/btFriends"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_addfriends_icon"
            android:contentDescription="btFriends"
            ></Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>