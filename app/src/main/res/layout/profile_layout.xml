<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/default_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:text=" Settings"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="true"
        android:drawableStart="@drawable/ic_settings"
        >
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=" Edit profile"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_accountsettings"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/black"
            >
        </TextView>

        <EditText
            android:layout_width="295dp"
            android:layout_height="60dp"
            android:hint="New username"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:background="@drawable/textbox_style"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/custom_username_icon"
            android:layout_gravity="center"
            android:inputType="text"
            >

        </EditText>

        <View
            android:id="@+id/line"
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:background="@color/medium_blue"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:layout_width="295dp"
            android:layout_height="60dp"
            android:hint="New email adress"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:background="@drawable/textbox_style"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/custom_mail_icon"
            android:layout_gravity="center"
            android:inputType="text"
            >

        </EditText>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Confirm"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="22dp"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            >

        </Button>



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_settings_icon"
            android:contentDescription="btSettings"
            ></Button>

        <Button
            android:id="@+id/btHome"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_home_icon"
            android:contentDescription="buttonHome"
            ></Button>

        <Button
            android:id="@+id/btFriends"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_addfriends_icon"
            android:contentDescription="btFriends"
            ></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>