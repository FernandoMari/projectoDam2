<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_blue">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/settings"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:textAllCaps="true"
            >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/footerButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btSettings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_settings_icon"
                android:contentDescription="btSettings"
                >

            </Button>

            <Button
                android:id="@+id/btHome"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_home_icon"
                android:contentDescription="buttonHome"

                >
            </Button>

            <Button
                android:id="@+id/btFriends"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_friends_icon"
                android:contentDescription="btFriends"

                ></Button>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:fillViewport="true"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            android:scrollIndicators="left"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_accountsettings"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/black"
                >
            </TextView>

            <EditText
                android:id="@+id/etUsername3"
                android:layout_width="295dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/textbox_style"
                android:drawableStart="@drawable/custom_username_icon"
                android:fontFamily="@font/montserrat_medium"
                android:text=""
                android:hint="@string/new_username"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20dp">

            </EditText>

            <View
                android:id="@+id/line"
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:background="@color/medium_blue"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />


            <EditText
                android:layout_width="295dp"
                android:layout_height="60dp"
                android:hint="@string/new_email_adress"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/textbox_style"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableStart="@drawable/custom_mail_icon"
                android:layout_gravity="center"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                >

            </EditText>

            <Button
                android:id="@+id/btAccept2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/montserrat_bold"
                android:stateListAnimator="@null"
                android:text="@string/btAccept"
                android:textColor="@color/white"
                android:textSize="22dp">

            </Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>