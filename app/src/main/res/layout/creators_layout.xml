<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/default_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:text="CREATORS"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/brown_sugar2"
        android:textAllCaps="true"
        >
    </TextView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="left"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="David Chaparro"
            android:textSize="30dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            >

        </TextView>

        <View
            android:id="@+id/line"
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:background="@color/medium_blue"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ismael MaridueÃ±a"
            android:textSize="30dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            >
        </TextView>

        <View
            android:id="@+id/line2"
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:background="@color/medium_blue"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zhi Yang Wu"
            android:textSize="30dp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            >
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_settings_icon"
            android:contentDescription="btSettings"
            ></Button>

        <Button
            android:id="@+id/btHome"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/custom_home_icon"
            android:contentDescription="buttonHome"
            ></Button>

        <Button
            android:id="@+id/btFriends"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_addfriends_icon"
            android:contentDescription="btFriends"
            ></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>