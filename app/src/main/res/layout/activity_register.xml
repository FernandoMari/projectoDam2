<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="#FFF"
    android:layout_gravity="center_horizontal|center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"
                    >

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:src="@drawable/logo_decisions"/>

                        <TextView
                            android:text="@string/register"
                            android:textSize="32dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#00bac6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            >
                        </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">


                        <EditText
                            android:id="@+id/etMail"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:background="@drawable/textbox_style"
                            android:ems="10"
                            android:hint="@string/email_adress"
                            android:inputType="text"
                            android:textSize="20dp"
                            android:drawableStart="@drawable/custom_mail_icon"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textColorHint="@android:color/darker_gray"
                            />

                        <View
                            android:id="@+id/line"
                            android:layout_width="285dp"
                            android:layout_height="1dp"
                            android:background="@color/light_blue"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>


                        <EditText
                            android:id="@+id/etUsername"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:minHeight="50dp"
                            android:background="@drawable/textbox_style"
                            android:ems="10"
                            android:hint="@string/username"
                            android:inputType="text"
                            android:textSize="20dp"
                            android:drawableStart="@drawable/custom_username_icon"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textColorHint="@android:color/darker_gray"

                            />



                        <View
                            android:id="@+id/line2"
                            android:layout_width="285dp"
                            android:layout_height="1dp"
                            android:background="@color/light_blue"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:minHeight="50dp"
                            android:background="@drawable/textbox_style"
                            android:ems="10"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:textSize="20dp"
                            android:drawableStart="@drawable/custom_password_icon"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textColorHint="@android:color/darker_gray"
                           />

                        <View
                            android:id="@+id/line3"
                            android:layout_width="285dp"
                            android:layout_height="1dp"
                            android:background="@color/light_blue"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:minHeight="50dp"
                            android:background="@drawable/textbox_style"
                            android:ems="10"
                            android:hint="@string/confirm_password"
                            android:inputType="textPassword"
                            android:textSize="20dp"
                            android:drawableStart="@drawable/custom_confirm_icon"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@android:color/darker_gray"/>


                        <Button
                            android:id="@+id/btAccept"
                            android:text="@string/btAccept"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:textSize="22dp"
                            android:layout_marginTop="25dp"
                            android:textColor="#FFF"
                            android:background="@drawable/button_style"
                            android:fontFamily="@font/montserrat_semibold"
                            android:stateListAnimator="@null"
                            >

                        </Button>

                </LinearLayout>

        </LinearLayout>

</LinearLayout>