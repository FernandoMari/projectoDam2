<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_decisions"/>

        <TextView
            android:text="LOGIN"
            android:textSize="36dp"
            android:fontFamily="@font/brown_sugar2"
            android:textColor="#00bac6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            >

        </TextView>

        <!--<TextView
           android:text="Username"
           android:textSize="22dp"
           android:textColor="#000"
           android:layout_width="275dp"
           android:layout_height="wrap_content"
           android:fontFamily="@font/montserrat_medium"
           >

       </TextView>-->

       <EditText
           android:id="@+id/etUsername"
           android:layout_width="275dp"
           android:layout_height="60dp"
           android:layout_marginBottom="20dp"
           android:textSize="22dp"
           android:ems="10"
           android:hint="Username"
           android:inputType="textPersonName"
           android:minHeight="50dp"
           android:selectAllOnFocus="true"
           android:singleLine="true"
           android:background="@drawable/textbox_style"
           android:fontFamily="@font/montserrat_medium"
           android:drawableStart="@drawable/custom_username_icon"
           android:paddingStart="12dp"
           android:paddingEnd="12dp"/>

       <!--<TextView
           android:text="Password"
           android:textSize="22dp"
           android:textColor="#000"
           android:layout_width="275dp"
           android:layout_height="wrap_content"
           android:fontFamily="@font/montserrat_medium"
           >

        </TextView>-->

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:minHeight="50dp"
            android:background="@drawable/textbox_style"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="22dp"
            android:drawableStart="@drawable/custom_password_icon"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Keep signed in"
            android:fontFamily="@font/montserrat_medium"
            >
        </CheckBox>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btLogin"
                android:text="@string/btLogin"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textSize="20dp"

                android:textColor="#000"
                android:layout_marginRight="5dp"
                android:background="@drawable/boton_curvo"
                android:fontFamily="@font/montserrat_regular"
                >

            </Button>
            <Button
                android:id="@+id/btRegister"
                android:text="@string/btRegister"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:background="@drawable/boton_curvo"
                android:fontFamily="@font/montserrat_regular"
                >

            </Button>

        </LinearLayout>





    </LinearLayout>

</LinearLayout>