<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            >

            <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_decisions"/>

            <TextView
                android:text="@string/login"
                android:textSize="32dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="#00bac6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                >

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

           <EditText
               android:id="@+id/etUsername2"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:textSize="20dp"
               android:ems="10"
               android:hint="@string/username"
               android:inputType="textPersonName"
               android:selectAllOnFocus="true"
               android:singleLine="true"
               android:background="@drawable/textbox_style"
               android:fontFamily="@font/montserrat_medium"
               android:drawableStart="@drawable/custom_username_icon"
               android:paddingStart="12dp"
               android:paddingEnd="12dp"
               android:textColor="@color/black"
               android:textColorHint="@android:color/darker_gray"/>

            <View
                android:id="@+id/line"
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:background="@color/light_blue"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:minHeight="50dp"
                android:background="@drawable/textbox_style"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:drawableStart="@drawable/custom_password_icon"
                android:fontFamily="@font/montserrat_medium"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"/>

            <CheckBox
                android:id="@+id/cbRemember"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:text="@string/keep_signed_in"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:button="@drawable/custom_checkbox"
                android:paddingStart="3dp"
                >
            </CheckBox>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/btLogin"
                    android:text="@string/btEnter"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_style"
                    android:fontFamily="@font/montserrat_semibold"
                    android:stateListAnimator="@null"
                    >
                </Button>

                <Button
                    android:id="@+id/btRegister"
                    android:text="@string/btRegister"
                    android:layout_width="165dp"
                    android:layout_height="60dp"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/button_style"
                    android:fontFamily="@font/montserrat_semibold"
                    android:stateListAnimator="@null"
                    >

                </Button>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>